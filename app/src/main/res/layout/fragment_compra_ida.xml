<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_departure"
            />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Partida"
                android:textAlignment="center"
                android:textColor="@color/azul_escuro"
                />
         </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrivals"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chegada"
            android:textAlignment="center"
            android:textColor="@color/azul_escuro"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_team_leader"
            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Adultos"
            android:textAlignment="center"
            android:textColor="@color/azul_escuro"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_marginLeft="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_tourist"
            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="CrianÃ§as"
            android:textAlignment="center"
            android:textColor="@color/azul_escuro"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_calendar"
            />
        <TextView
            android:layout_margin="2dp"
            android:id="@+id/data_partida"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Selecione a data de partida"
            android:textAlignment="center"
            android:textColor="@color/azul_escuro"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btn_consultar"
        android:layout_margin="50dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Pesquisar voo"
        android:textColor="@color/white"
        android:outlineSpotShadowColor="@color/Black"
        android:background="@drawable/btn_background"/>

    </LinearLayout>
</LinearLayout>