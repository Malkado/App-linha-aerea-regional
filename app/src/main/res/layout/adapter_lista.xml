<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_departure"
            android:id="@+id/icon_voo"
            />
        <TextView
            android:id="@+id/TextVoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voo"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/icon_voo"
            android:textColor="@color/DeepSkyBlue2"
            android:textStyle="bold"
            android:textCursorDrawable="@drawable/gradient"/>
        <TextView
            android:id="@+id/numVoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="num"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_below="@id/TextVoo"
            android:layout_marginLeft="8dp"

            android:layout_toRightOf="@id/icon_voo"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REC"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/imgCenter"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="5dp"
            android:id="@+id/textSaida"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_paper_plane"

            android:id="@+id/imgCenter"
            android:layout_centerHorizontal="true"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNU"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imgCenter"
            android:layout_marginLeft="5dp"
            android:id="@+id/textChegada"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duração"
            android:textStyle="bold"
            android:textColor="@color/azul_escuro"
            android:textSize="15dp"
            android:id="@+id/staticDuracao"
            android:layout_marginTop="15dp"
            android:layout_below="@id/icon_voo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tempo"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/staticDuracao"
            android:id="@+id/tempoVoo"
            android:layout_marginTop="15dp"
            android:layout_below="@id/icon_voo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:id="@+id/horarioSaida"
            android:layout_below="@id/textSaida"
            android:layout_toLeftOf="@id/imgCenter"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:id="@+id/horarioChegada"
            android:layout_below="@id/textSaida"
            android:layout_toRightOf="@id/imgCenter"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="00,00"
            android:textSize="22dp"
            android:layout_toRightOf="@id/textChegada"
            android:layout_marginLeft="25dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="R$"
            android:layout_alignLeft="@id/price"
            />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>